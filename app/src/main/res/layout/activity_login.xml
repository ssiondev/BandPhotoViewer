<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="LoginActivity" type="com.bandphotoviewer.View.Activity.LoginBindingActivity"/>
    </data>

    <LinearLayout
        android:id="@+id/act_login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/act_login_button"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/btn_border_login"
            android:text="@string/login_btn"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:onClick="@{LoginActivity::startRedirectActivity}"/>
    </LinearLayout>
</layout>

